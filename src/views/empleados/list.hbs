<div class="container p-4">
    <div class="row">
        {{#each employes}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    {{!-- <a href="{{url}}" target="_blank"> --}}
                        <h3 class="card-title text-uppercase">
                            {{id}}
                        </h3>
                    {{!-- </a> --}}
                    <p class="m-2">{{tipo_empleado}}</p>
                    <p class="m-2">{{nombre}}</p>
                    <p class="text-muted">
                        {{area}}
                    </p>
                    <a class="btn btn-danger" href="/empleados/delete/{{id}}">
                        Borrar Empleado
                    </a>
                    <a class="btn btn-secondary" href="/empleados/edit/{{id}}">
                        Editar
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not Links saved yet.</p>
                <a href="/rutas/add">Create One!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>