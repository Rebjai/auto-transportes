<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/rutas/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="id" class="form-control" placeholder="id" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="nombre" class="form-control" placeholder="Nombre">
                        </div>
                        <div class="form-group">
                            <input type="text" name="apellidos" class="form-control" placeholder="Apellidos">
                        </div>
                        <div class="form-group">
                            <input type="text" name="fecha_nacimiento" class="form-control" placeholder="aaaa/mm/dd">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control"
                                placeholder="Description"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="origen">Tipo de empleado</label>
                            <select name="origen" class="form-control">
                                {{#each tipo_empleado}}

                                <option value="{{id}}">{{nombre}}</option>
                                {{else}}
                                <div class="col-md-4 mx-auto">
                                    <div class="card card-body text-center">
                                        <p>There are not Links saved yet.</p>
                                        <a href="/rutas/add">Create One!</a>
                                    </div>
                                </div>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="destino">√Årea</label>
                            <select name="destino" class="form-control">
                                {{#each area}}

                                <option value="{{id}}">{{nombre}}</option>
                                {{else}}
                                <div class="col-md-4 mx-auto">
                                    <div class="card card-body text-center">
                                        <p>There are not Links saved yet.</p>
                                        <a href="/rutas/add">Create One!</a>
                                    </div>
                                </div>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-check">
                            <input name="activo" class="form-check-input" type="checkbox" value="" id="activo">
                            <label class="form-check-label" for="activo">
                                Activo
                            </label>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>