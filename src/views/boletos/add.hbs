<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/boletos/add" method="POST">
                        <div class="form-group">
                            <label for="origen">Vehiculo</label>
                            <select name="vehiculo" class="form-control" id="vehiculo">
                                {{#each vehiculo}}
                                <option value="{{id}}">{{placas}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="taquilla">Taquilla</label>
                            <select name="taquilla" class="form-control" id="taquilla">
                                {{#each taquilla}}
                                <option value="{{id}}">taquilla {{id}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="origen">ruta</label>
                            <select name="ruta" class="form-control">
                                {{#each ruta}}

                                <option value="{{id}}">de {{origen}} a {{destino}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="pasajero">Pasajero</label>
                            <select name="pasajero" class="form-control" id="pasajero">
                                {{#each pasajero}}
                                <option value="{{id}}">{{nombre}} {{apellido}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="asiento">Asiento</label>
                            <input name="asiento"  type="text" class="form-control" id="asiento">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>