<div class="container p-4">
    <div class="row">
        {{#each pasajero}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-uppercase">
                        {{nombre}}
                    </h3>
                    <p class="m-2">correo: {{correo}}</p>
                    <p class="text-muted">
                        {{!-- {{timeago created_at}} --}}
                    </p>
                    <a class="btn btn-danger" href="/pasajeros/delete/{{id}}">
                        Borrar
                    </a>
                    <a class="btn btn-secondary" href="/pasajeros/edit/{{id}}">
                        Editar
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>AÃºn no hay un pasajero registrado</p>
                <a href="/pasajeros/add">Create One!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>